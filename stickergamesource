			if (joy.pad['ArrowUp']) { 
				player.dy = -1;
				player.y -= 2;
			}
			else if (joy.pad['ArrowDown']) {
				player.dy = 1;
				player.y += 2;
			}
			else if (joy.pad['ArrowLeft']) { 
				player.dx = -1;
				player.x -= 2;
			}
			else if (joy.pad['ArrowRight']) { 
				player.dx = 1;
				player.x += 2;
			}

			if (player.y % 15 != 0){
				if(player.dy = -1){
					player.y--;
				}
				else if (player.dy = 1) {
					player.y++;
				}
			}
			else {player.dy = 0;}

			if(player.x % 15 != 0){
				if(player.dx = -1){
					player.x--;
				}
				else if (player.dx = 1) {
					player.x++;
				}
			}
			
		
